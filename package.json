{
  "name": "loose-dependency-manager",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Wire-up fragmented codes and files from various sources with a single command.",
  "homepage": "https://github.com/ldm-org/ldm",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist",
    "bin"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ldm": "bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "pnpm run build && (concurrently \"tsc -p tsconfig.build.json -w\" \"tsc-alias -p tsconfig.build.json -w\")",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest --config vitest.config.ts",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "generate:jsonschema": "vite-node tools/generate-json-schema.ts"
  },
  "dependencies": {
    "@hey-api/client-axios": "^0.6.0",
    "axios": "^1.7.9",
    "commander": "^13.1.0",
    "core-js": "^3.40.0",
    "crypto-js": "^4.2.0",
    "deep-object-diff": "^1.1.9",
    "dotenv": "^16.4.7",
    "fp-ts": "^2.16.3",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5",
    "lodash": "^4.17.21",
    "log-update": "^4.0.0",
    "octokit": "^3.2.1",
    "semver": "^7.7.0",
    "subslate": "^1.0.0",
    "ts-essentials": "^10.0.4",
    "ts-pattern": "^5.6.2",
    "wait": "^0.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@faker-js/faker": "^9.4.0",
    "@hey-api/openapi-ts": "^0.64.1",
    "@types/core-js": "^2.5.8",
    "@types/crypto-js": "^4.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.15",
    "@types/node": "^20.11.25",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/eslint-plugin": "^1.1.7",
    "concurrently": "^9.1.2",
    "dir-compare": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "find-up": "^7.0.0",
    "lefthook": "^1.6.16",
    "rimraf": "^6.0.1",
    "shelljs": "^0.8.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.2.2",
    "vite": "^6.0.11",
    "vite-node": "^3.0.4",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.0.4",
    "zod-to-json-schema": "^3.24.1"
  }
}